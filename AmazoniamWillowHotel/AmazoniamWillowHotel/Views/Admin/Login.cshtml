
@{
    ViewBag.Title = "LoginAdministrator";
}

<div id="login">
    <span class="text-danger">@ViewData["error"]</span>
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-box" class="col-md-8">
            <form id="login-form" class="form" action="~/Admin/Index" method="post">
                <h2 class="text-center">Login</h2>
                <div class="form-group">
                    <label for="username">Usuario:</label><br>
                    <input type="text" name="username" id="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label><br>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-default" value="Aceptar">
                </div>
            </form>
        </div>
    </div>
</div>