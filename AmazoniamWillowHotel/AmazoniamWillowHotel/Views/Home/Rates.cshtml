
@{
ViewBag.Title = "Tarifas";
}

<h2>Tarifas</h2>
<br />
<br />

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
            </div>
        </div>

    </div>
</div>



@foreach (var item in (List<AmazoniamWillowHotel.Models.Tipo_Habitacion>)ViewData["types"])
{
<div class="row">
    <div class="col-sm-3">
        <img class="mostrarModal" width="100%" alt="@item.Titulo" src="~/Public/images/@item.Imagen">
    </div>
    <div class="col-sm-9">
        <p>@item.Descripcion</p>
        <br />
        <h4>Precio: $@item.Tarifa</h4>
    </div>
</div>
    <br />
    <br />
}
    


<script>
    $(document).ready(function () {
        $(".mostrarModal").click(function () {

            var modal = $("#myModal");
            var titulo = $(this).attr('alt');
            var img = $(this).attr('src');

            modal.find('.modal-title').text(titulo);
            modal.find('.modal-body').html('<img width="100%" src="' + img + '" />');
            modal.modal();

        });
    });
</script>